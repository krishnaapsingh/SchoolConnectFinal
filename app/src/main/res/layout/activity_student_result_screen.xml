<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#9befeeee">


    <android.support.design.widget.AppBarLayout
        android:id="@+id/action_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="48dp">
            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/yellowcolor"
                app:theme="@style/ThemeToolbar" />

        </RelativeLayout>
    </android.support.design.widget.AppBarLayout>

    <ScrollView
        android:layout_below="@+id/action_bar"
        android:fillViewport="true"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout
            android:orientation="vertical"

            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:elevation="10dp"
                app:cardMaxElevation="10dp"
                app:cardElevation="10dp"
                android:layout_margin="5dp">

                <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2">
                    <LinearLayout
                        android:orientation="vertical"
                        android:layout_weight="1.3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <LinearLayout
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:paddingLeft="1dp"
                                android:fontFamily="@font/roboto_regular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Name : "
                                android:textSize="18sp"/>

                            <TextView
                                android:id="@+id/std_name"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="start"
                                android:layout_marginLeft="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="Pavan Kumar Singh"
                                android:textSize="16sp"
                                android:maxLines="2"
                                android:minLines="1"/>
                        </LinearLayout>

                        <View
                            android:background="@color/lightgray"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"/>
                        <LinearLayout
                            android:layout_marginBottom="2dp"
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:paddingLeft="1dp"
                                android:fontFamily="@font/roboto_regular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Roll No: "
                                android:textSize="16sp"/>

                            <TextView
                                android:id="@+id/std_roll"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="start"
                                android:layout_marginLeft="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="158429050"
                                android:textSize="16sp"
                                android:maxLines="1"
                                android:minLines="1"/>
                        </LinearLayout>

                        <View
                            android:background="@color/lightgray"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"/>
                        <LinearLayout
                            android:layout_marginBottom="2dp"
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:paddingLeft="1dp"
                                android:fontFamily="@font/roboto_regular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="DOB     : "
                                android:textSize="16sp"/>

                            <TextView
                                android:id="@+id/std_dob"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="start"
                                android:layout_marginLeft="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="16/09/2000"
                                android:textSize="16sp"
                                android:maxLines="1"
                                android:minLines="1"/>
                        </LinearLayout>

                        <View
                            android:background="@color/lightgray"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"/>
                        <LinearLayout
                            android:layout_marginBottom="2dp"
                            android:layout_marginTop="2dp"
                            android:orientation="horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <TextView
                                android:fontFamily="@font/roboto_regular"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Class   : "
                                android:textSize="16sp"/>

                            <TextView
                                android:id="@+id/std_class"
                                android:fontFamily="@font/roboto_medium"
                                android:gravity="start"
                                android:layout_marginLeft="5dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:text="5th  Section -A"
                                android:textSize="16sp"
                                android:maxLines="1"
                                android:minLines="1"/>
                        </LinearLayout>


                        <View
                            android:background="@color/lightgray"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"/>
                    </LinearLayout>

                    <RelativeLayout
                        android:padding="5dp"
                        android:layout_weight="0.7"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">
                        <com.mikhaellopez.circularimageview.CircularImageView
                            android:layout_centerInParent="true"
                            android:id="@+id/user_image"
                            android:layout_width="110dp"
                            android:layout_height="110dp"
                            app:civ_border_color="#ababab"
                            app:civ_border_width="2dp"
                            android:src="@drawable/mypic"
                            app:civ_shadow="true"
                            app:civ_shadow_radius="0"
                            app:civ_shadow_color="#8BC34A"/>
                    </RelativeLayout>
                </LinearLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/editboxbackground">

                <LinearLayout
                    android:weightSum="7"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    >

                    <RelativeLayout
                        android:layout_weight="0.5"
                        android:layout_margin="2dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:fontFamily="@font/roboto_regular"
                            android:textSize="16sp"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="S No"/>
                    </RelativeLayout>
                    <View
                        android:background="@color/textColorPrimary"
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"/>

                    <RelativeLayout
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1.5"
                        android:layout_margin="2dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:fontFamily="@font/roboto_regular"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Subject"
                            android:textSize="18sp"/>
                    </RelativeLayout>
                    <View
                        android:background="@color/textColorPrimary"
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"/>

                    <RelativeLayout
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:fontFamily="@font/roboto_regular"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Full Mark"
                            android:textSize="15sp"/>
                    </RelativeLayout>
                    <View
                        android:background="@color/textColorPrimary"
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"/>

                    <RelativeLayout
                        android:layout_weight="2"
                        android:layout_margin="2dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:fontFamily="@font/roboto_medium"
                            android:id="@+id/txt1"
                            android:gravity="center_horizontal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Subject"
                            android:textSize="13sp"/>
                        <View
                            android:id="@+id/view1"
                            android:layout_below="@+id/txt1"
                            android:background="@color/textColorPrimary"
                            android:layout_width="match_parent"
                            android:layout_height="0.5dp"/>

                        <View
                            android:layout_centerHorizontal="true"
                            android:layout_below="@+id/txt1"
                            android:layout_width="0.5dp"
                            android:layout_height="match_parent"
                            android:background="@color/textColorPrimary"/>
                        <LinearLayout
                            android:id="@+id/lay1"
                            android:layout_below="@+id/view1"
                            android:weightSum="2"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">

                            <RelativeLayout
                                android:layout_weight="1"
                                android:layout_margin="2dp"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:gravity="center_horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="TH."
                                    android:textSize="15sp"/>

                            </RelativeLayout>

                            <RelativeLayout
                                android:layout_weight="1"
                                android:layout_margin="2dp"
                                android:layout_width="0dp"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:fontFamily="@font/roboto_regular"
                                    android:gravity="center_horizontal"
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:text="PR."
                                    android:textSize="15sp"/>

                            </RelativeLayout>
                        </LinearLayout>


                    </RelativeLayout>
                    <View
                        android:background="@color/textColorPrimary"
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"/>


                    <RelativeLayout
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:fontFamily="@font/roboto_regular"
                            android:layout_centerVertical="true"
                            android:gravity="center"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Total Mark"
                            android:textSize="15sp"/>
                    </RelativeLayout>
                    <View
                        android:background="@color/textColorPrimary"
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"/>
                    <RelativeLayout
                        android:layout_gravity="center_vertical"
                        android:layout_weight="1"
                        android:layout_margin="2dp"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:fontFamily="@font/roboto_regular"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_alignParentLeft="true"
                            android:layout_alignParentStart="true"
                            android:layout_alignParentTop="true"
                            android:gravity="center"
                            android:text="Grade"
                            android:textSize="15sp" />
                    </RelativeLayout>
                    <View
                        android:background="@color/textColorPrimary"
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"/>



                </LinearLayout>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/textColorPrimary"/>

                <android.support.v7.widget.RecyclerView
                    android:id="@+id/recycler_view_result"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"></android.support.v7.widget.RecyclerView>

                <LinearLayout
                    android:background="@drawable/editboxbackground"
                    android:weightSum="7"
                    android:layout_width="match_parent"
                    android:layout_height="72dp">

                    <RelativeLayout
                        android:layout_weight="0.470"
                        android:layout_width="0dp"
                        android:layout_margin="2dp"
                        android:layout_height="wrap_content"></RelativeLayout>


                    <View
                        android:background="@color/textColorPrimary"
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"/>
                    <RelativeLayout
                        android:layout_gravity="center"
                        android:layout_weight="3.5"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/div_txt"
                            android:fontFamily="@font/roboto_light"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:textSize="18sp"
                            android:textStyle="bold"/>
                    </RelativeLayout>

                    <View
                        android:background="@color/textColorPrimary"
                        android:layout_width="0.5dp"
                        android:layout_height="match_parent"/>
                    <RelativeLayout
                        android:layout_gravity="center"
                        android:layout_weight="3"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content">

                        <TextView
                            android:fontFamily="@font/roboto_regular"
                            android:id="@+id/total_txt"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentTop="true"
                            android:layout_centerHorizontal="true"
                            android:text="Total Marks"
                            android:textSize="18sp"
                            android:textStyle="bold" />

                        <TextView
                            android:id="@+id/total_txt1"
                            android:fontFamily="@font/roboto_light"
                            android:layout_below="@+id/total_txt"
                            android:layout_centerHorizontal="true"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="-"
                            android:textSize="16sp"
                            android:textStyle="bold"/>
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </ScrollView>



</RelativeLayout>