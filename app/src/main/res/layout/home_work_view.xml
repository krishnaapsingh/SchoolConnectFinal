<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:id="@+id/calendar_layout"
        android:layout_below="@+id/spinner_layout"
        android:layout_margin="10dp"
        android:background="@drawable/boxdesign"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:id="@+id/heading1"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/yellowcolor">
            <RelativeLayout
                android:layout_marginTop="5dp"
                android:layout_marginLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <ImageView
                    android:layout_centerVertical="true"
                    android:id="@+id/sub_img"
                    android:layout_width="35dp"
                    android:layout_height="28dp"
                    android:src="@drawable/cubes"/>

                <TextView
                    android:layout_centerVertical="true"
                    android:layout_marginLeft="10dp"
                    android:layout_toRightOf="@+id/sub_img"
                    android:id="@+id/subject_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Math"
                    android:textSize="18sp"
                    android:fontFamily="@font/roboto_medium"
                    android:textColor="@color/white"/>

                <TextView
                    android:id="@+id/date_txt"
                    android:layout_marginRight="5dp"
                   android:layout_alignParentRight="true"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text=""
                    android:textColor="@color/white"/>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/name_teacher_layout"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/teachername_txt"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:textColor="@color/white"
                    android:text=""/>
            </RelativeLayout>
        </LinearLayout>

        <TextView
            android:fontFamily="sans-serif"
            android:gravity="center"
            android:id="@+id/textnotice"
            android:layout_below="@+id/heading1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minLines="4"
            android:text=""/>

     <!--   <GridView
            android:layout_below="@+id/textnotice"
            android:numColumns="3"
            android:gravity="center"
            android:columnWidth="90dp"
            android:stretchMode="columnWidth"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/grid"
            ></GridView>-->



        <ImageView
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dp"
            android:id="@+id/down_load"
            android:layout_below="@+id/textnotice"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/download_symbol"/>

    </RelativeLayout>
</RelativeLayout>