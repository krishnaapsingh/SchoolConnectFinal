<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#9befeeee">

    <LinearLayout
        android:id="@+id/class_rel"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:weightSum="1"
        android:background="@drawable/boxwhite">

        <RelativeLayout
            android:layout_weight="0.8"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_class"
                android:fontFamily="@font/roboto_medium"
                android:paddingLeft="15dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Select class name"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textColorHint="#aaf4961b"/>

            <Spinner
                android:id="@+id/class_spinner"
                android:layout_alignParentBottom="true"
                android:layout_width="0dp"
                android:layout_height="0dp"></Spinner>
        </RelativeLayout>

        <RelativeLayout
            android:background="@color/yellowcolor"
            android:layout_weight="0.2"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/down_arrow"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/section_rel"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:weightSum="1"
        android:background="@drawable/boxwhite">

        <RelativeLayout
            android:layout_weight="0.8"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_section"
                android:fontFamily="@font/roboto_medium"
                android:paddingLeft="15dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Select class section"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textColorHint="#aaf4961b"/>

            <Spinner
                android:id="@+id/section_spinner"
                android:layout_alignParentBottom="true"
                android:layout_width="0dp"
                android:layout_height="0dp"></Spinner>
        </RelativeLayout>

        <RelativeLayout
            android:background="@color/yellowcolor"
            android:layout_weight="0.2"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/down_arrow"/>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <Button
        android:layout_marginTop="20dp"
        android:id="@+id/attendance_btn"
        android:textAllCaps="false"
        android:fontFamily="@font/roboto_regular"
        android:background="@color/colorPrimaryDark"
        android:layout_marginBottom="15dp"
        android:layout_marginRight="35dp"
        android:layout_marginLeft="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Attendance"
        android:textColor="@color/white"
        android:textSize="25sp"/>


        <android.support.v7.widget.CardView
            android:layout_below="@+id/attendance_btn"
            android:id="@+id/start_date"
            android:layout_margin="10dp"
            android:layout_weight="1"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:cardElevation="10dp"
            >

            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <RelativeLayout
                    android:background="@color/yellowcolor"
                    android:layout_width="match_parent"
                    android:layout_height="50dp"
                    >

                    <TextView
                        android:fontFamily="@font/roboto_light"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Select  view/Modify date"
                        android:textSize="16sp"
                        android:textColor="@color/white"/>
                </RelativeLayout>
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    >
                    <TextView
                        android:id="@+id/txt_start"
                        android:layout_centerInParent="true"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="--/--/----"
                        android:textSize="18sp"
                        />

                </RelativeLayout>

            </LinearLayout>
        </android.support.v7.widget.CardView>

    <LinearLayout
        android:id="@+id/change_layout"
        android:layout_marginTop="15dp"
        android:layout_below="@+id/start_date"
        android:weightSum="2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <RelativeLayout
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <Button
                android:textAllCaps="false"
                android:id="@+id/att_view_btn"
                android:fontFamily="@font/roboto_regular"
                android:background="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="View"
                android:textColor="@color/white"
                android:textSize="25sp"/>
        </RelativeLayout>

        <RelativeLayout
            android:layout_margin="5dp"
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content">
            <Button
                android:textAllCaps="false"
                android:id="@+id/att_modify_btn"
                android:fontFamily="@font/roboto_regular"
                android:background="@color/colorPrimaryDark"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Modify"
                android:textColor="@color/white"
                android:textSize="25sp"/>
        </RelativeLayout>
    </LinearLayout>

        <LinearLayout
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:paddingLeft="10dp"
                android:fontFamily="@font/roboto_regular"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Note:-"
                android:textColor="@color/red"
                android:textSize="18sp"/>

            <TextView
                android:fontFamily="@font/roboto_light"
                android:paddingLeft="10dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="If you want to view and modify  attendance then pick date."
                android:textColor="@color/textColorPrimary"
                android:textSize="16sp"/>
        </LinearLayout>
    </RelativeLayout>




</LinearLayout>