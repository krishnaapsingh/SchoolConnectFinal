<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#9befeeee">

    <LinearLayout
        android:id="@+id/class_rel"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:weightSum="1"
        android:background="@drawable/boxwhite">

        <RelativeLayout
            android:layout_weight="0.8"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_class"
                android:fontFamily="@font/roboto_medium"
                android:paddingLeft="15dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Select class name"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textColorHint="#aaf4961b"/>

            <Spinner
                android:id="@+id/class_spinner"
                android:layout_alignParentBottom="true"
                android:layout_width="0dp"
                android:layout_height="0dp"></Spinner>
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="0.2"
            android:background="@color/yellowcolor">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:src="@drawable/down_arrow" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/section_rel"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:weightSum="1"
        android:background="@drawable/boxwhite">

        <RelativeLayout
            android:layout_weight="0.8"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_section"
                android:fontFamily="@font/roboto_medium"
                android:paddingLeft="15dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Select class section"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textColorHint="#aaf4961b"/>

            <Spinner
                android:id="@+id/section_spinner"
                android:layout_alignParentBottom="true"
                android:layout_width="0dp"
                android:layout_height="0dp"></Spinner>
        </RelativeLayout>

        <RelativeLayout
            android:background="@color/yellowcolor"
            android:layout_weight="0.2"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/down_arrow"/>
        </RelativeLayout>
    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_below="@+id/select_student_layout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">



            <LinearLayout
                android:orientation="vertical"
                android:layout_margin="15dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/boxdesign">


                <EditText
                    android:id="@+id/des_txt"
                    android:gravity="center"
                    android:background="@android:color/transparent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:minLines="5"
                    android:hint="Enter discription of Uploaded file example-chapter number, page number, paragraph etc."/>



                <TextView
                    android:fontFamily="@font/roboto_regular"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="If you have any attachments of homework"
                    android:minLines="1"
                    android:maxLines="1"
                    android:textSize="16sp"/>

                <ImageView
                    android:id="@+id/attch_image"
                    android:layout_gravity="center_horizontal"
                    android:padding="20dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/attach"/>

                <TextView
                    android:layout_gravity="center_horizontal"
                    android:layout_marginBottom="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/file_name"/>

            </LinearLayout>


            <Button
                android:textAllCaps="false"
                android:id="@+id/save_homebtn"
                android:layout_gravity="center"
                android:paddingLeft="15dp"
                android:layout_margin="15dp"
                android:gravity="center"
                android:fontFamily="sans-serif"
                android:background="@color/yellowcolor"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:text="Save"
                android:textColor="@color/white"
                android:textSize="20sp"
                android:layout_alignParentBottom="true"/>



        </RelativeLayout>


    </RelativeLayout>




</LinearLayout>