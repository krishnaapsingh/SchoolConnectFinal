<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#9befeeee">

    <LinearLayout
        android:id="@+id/class_rel"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:weightSum="1"
        android:background="@drawable/boxwhite">

        <RelativeLayout
            android:layout_weight="0.8"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_class"
                android:fontFamily="@font/roboto_medium"
                android:paddingLeft="15dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Select class name"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textColorHint="#aaf4961b"/>

            <Spinner
                android:id="@+id/class_spinner"
                android:layout_alignParentBottom="true"
                android:layout_width="0dp"
                android:layout_height="0dp"></Spinner>
        </RelativeLayout>

        <RelativeLayout
            android:background="@color/yellowcolor"
            android:layout_weight="0.2"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/down_arrow"/>
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/section_rel"
        android:layout_margin="10dp"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        android:weightSum="1"
        android:background="@drawable/boxwhite">

        <RelativeLayout
            android:layout_weight="0.8"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/txt_section"
                android:fontFamily="@font/roboto_medium"
                android:paddingLeft="15dp"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="Select class section"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:textColorHint="#aaf4961b"/>

            <Spinner
                android:id="@+id/section_spinner"
                android:layout_alignParentBottom="true"
                android:layout_width="0dp"
                android:layout_height="0dp"></Spinner>
        </RelativeLayout>

        <RelativeLayout
            android:background="@color/yellowcolor"
            android:layout_weight="0.2"
            android:layout_width="0dp"
            android:layout_height="match_parent">

            <ImageView
                android:layout_centerInParent="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/down_arrow"/>
        </RelativeLayout>
    </LinearLayout>





    <Button
        android:textAllCaps="false"
        android:id="@+id/next"
        android:layout_marginTop="45dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="Next"
        android:textSize="20sp"
        android:fontFamily="@font/roboto_medium"
        android:textColor="@color/white"
        android:paddingRight="50dp"
        android:paddingLeft="50dp"
        android:background="@color/yellowcolor"/>





</LinearLayout>